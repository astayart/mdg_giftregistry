        <?php foreach ($registries as $reg) : ?>
            <li><span class="separator">|</span> <a href="foo"
                                                    class="link-wishlist"><?php echo $this->__('Add to ') . $reg->getEventName() ?></a>
            </li>
        <?php endforeach; ?>
    <?php endif; ?>
</ul>
